@model SuperScheduler.ViewModels.PositionViewModel
@{
    ViewBag.Title = "Positions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12">
    <h2>Positions</h2>


    @if (Model.Positions.Count > 0)
    {
        <table class="table-hover table-striped table" style="width:100%; text-align:center; font-size:16px;">
            <thead>
                <tr>
                    <th style="width:15%; text-align:center">#</th>
                    <th style="width:60%; text-align:center">Positions</th>
                    <th style="width:25%; text-align:center">Remove Position</th>
                </tr>
            </thead>
            <tbody style="padding-top:10px;">
                @{
                    int row = 1;
                    foreach (var el in Model.Positions)
                    {
                        <tr style="">
                            <td style="width:15%;padding-top:14px;">@row</td>
                            <td style="width:60%;padding-top:14px;">@el.ToString()</td>
                            <td style="width:25%">
                                @Html.ActionLink("Remove", "RemovePosition", "Manager", new { positionName = el.ToString() }, new { @class = " btn alert-danger ", @style = "padding: 5px" })
                            </td>
                            @{row++;}
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>You have no set positions. Click add to add one!</h3>
    }

    @Html.ActionLink("Add", "AddPositions", "Manager", null, new { @class = " btn btn-default ", @style = "padding: 5px; width: 80px" })
</div>


