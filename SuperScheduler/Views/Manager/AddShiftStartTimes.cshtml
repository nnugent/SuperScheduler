@model SuperScheduler.Models.ShiftStartTimes
@{
    ViewBag.Title = "Add Shift Start Time";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row col-md-12">
    <h2>Add Shift Start Times</h2>
    <p>When you would like shifts to be able to start.</p>
    <br />
    @using (Html.BeginForm("NewShiftStartTime", "Manager"))
    {
        <div class=" row form-group col-md-12 ">
            @Html.LabelFor(Model => Model.ShiftStartTime, null, new { @style = "font-size:18px" })
            @Html.TextBoxFor(Model => Model.ShiftStartTime, null, new { @class = "form-control" })
        </div>

        <div class=" row form-group col-md-12 ">
            <button type="submit" class="btn btn-default" style="width:100px">Save</button>
            @Html.ActionLink("Finish", "HomePage", "Manager", null, new { @class = "btn btn-default", style = "width:100px" })
        </div>
    }
</div>