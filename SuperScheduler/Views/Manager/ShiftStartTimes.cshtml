@model SuperScheduler.ViewModels.ShiftStartTimesViewModel
@{
    ViewBag.Title = "Shift Start Times";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12">
    <h2>Shift Start Times</h2>


    @if (Model.ShiftStartTimes.Count > 0)
    {
        <table class="table-hover table-striped table" style="width:100%; text-align:center; font-size:16px;">
            <thead>
                <tr>
                    <th style="width:15%; text-align:center">#</th>
                    <th style="width:60%; text-align:center">Shift Start Times (24-Hour Time)</th>
                    <th style="width:25%; text-align:center">Remove Shift Start Time</th>
                </tr>
            </thead>
            <tbody style="padding-top:10px;">
                @{
                    int row = 1;
                    foreach (var el in Model.ShiftStartTimes)
                    {
                        <tr style="">
                            <td style="width:15%;padding-top:11px;">@row</td>
                            <td style="width:60%;padding-top:11px;">@el.ToString(@"hh\:mm")</td>
                            <td style="width:25%">
                                @Html.ActionLink("Remove", "RemoveShiftStartTime", "Manager", new { time = el.Hours }, new { @class = " btn alert-danger ", @style = "padding: 5px" })
                            </td>
                            @{row++;}
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>You have no set shift start times. Click add to add one!</h3>
    }

    @Html.ActionLink("Add", "AddShiftStartTimes", "Manager", null, new { @class = " btn btn-default ", @style = "padding: 5px; width: 80px" })
</div>


