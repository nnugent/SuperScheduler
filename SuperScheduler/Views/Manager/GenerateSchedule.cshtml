@model SuperScheduler.Models.OneWeekSchedule

@{
    ViewBag.Title = "Generate Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-sm-12">
    <h2>Generate Schedule</h2>
    <table class="table-hover table-striped table" style="width:100%; text-align:center; font-size:16px;">
        <thead>
            <tr>
                <th style="text-align:center">Employee</th>
                <th style="text-align:center">Sunday</th>
                <th style="text-align:center">Monday</th>
                <th style="text-align:center">Tuesday</th>
                <th style="text-align:center">Wednesday</th>
                <th style="text-align:center">Thursday</th>
                <th style="text-align:center">Friday</th>
                <th style="text-align:center">Saturday</th>
                <th style="text-align:center">Sunday</th>
            </tr>
        </thead>
        <tbody style="padding-top:10px;">

            @for (int i = 0; i < Model.Employees.Count; i++)
            {
                <tr>
                    @if (Model.Employees[i].Active)
                    {
                        <td style="padding-top:11px;">@Model.Employees[i].Name</td>
                        for (int j = 0; j < Model.Week.Count; j++)
                        {
                            <td>
                                @Html.DropDownListFor(m => m.Week[j].Shifts[i].ShiftStartTime, new SelectList(Model.ShiftStartTimes, "Id", "ShiftStartTime"), "Shift Start Time", new { @class = "form-control", @style = "font-size: 8px; height: 15px; width: 85px; padding: 2px 4px; margin: 2px;" })
                                @Html.DropDownListFor(m => m.Week[j].Shifts[i].ShiftLength, new SelectList(Model.ShiftLengths, "Id", "Shift"), "Length of Shift", new { @class = "form-control", @style = "font-size: 8px; height: 15px; width: 85px; padding: 2px 4px; margin: 2px;" })
                            </td>
                        }
                    }
                </tr>
            }
        </tbody>
    </table>

    <div>
        <div class="">
            @Html.LabelFor(m => m.OvertimeLimit)
            @Html.TextBoxFor(m => m.OvertimeLimit, null, new { @class = "form-control", @style = "Height: 30px; Width: 160px;" })
        </div>
        <br/>
    </div>


    @Html.ActionLink("Auto Generate", "AddShiftLengths", "Manager", null, new { @class = " btn btn-default ", @style = "padding: 5px;" })
</div>
