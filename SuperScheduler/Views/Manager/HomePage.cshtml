
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2 class="text-center">Main Menu</h2>
</div>

<br/>

<div class="text-center">
    <div class="row-fluid">
        @Html.ActionLink("View Shift Lengths", "ShiftLengths", "Manager", null, new { @class = " btn btn-primary ", @style = " width: 200px "})
    </div>

    <br/>

    <div class="row-fluid">
        @Html.ActionLink("View Shift Start Times", "ShiftStartTimes", "Manager", null, new { @class = " btn btn-primary ", @style = " width: 200px " })
    </div>

    <br/>

    <div class="row-fluid">
        @Html.ActionLink("View Positions", "Positions", "Manager", null, new { @class = " btn btn-primary ", @style = " width: 200px " })
    </div>

    <br/>

    <div class="row-fluid">
        @Html.ActionLink("Generate New Schedule", "GenerateSchedule", "Manager", null, new { @class = " btn btn-primary ", @style = " width: 200px " })

    </div>

    <br/>

    <div class="row-fluid">
